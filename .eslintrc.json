{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error",
    "no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_"
    }],
    "semi": ["error", "always"],
    "quotes": ["warn", "single", {
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }]
  },
  "overrides": [
    {
      "files": [
        "scripts/**/*.js",
        "seeds/**/*.js"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
