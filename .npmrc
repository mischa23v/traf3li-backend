# NPM Configuration with Security Settings

# Enable automatic security audits during install
audit=true

# Audit level - fail on moderate or higher vulnerabilities
# Options: low, moderate, high, critical
audit-level=moderate

# Disable funding messages to reduce noise in CI/CD
fund=false

# Save exact versions instead of version ranges
# This ensures deterministic builds
save-exact=true

# Prevent package-lock.json from being ignored
package-lock=true

# Use production mode by default to exclude devDependencies
# (Can be overridden with --include=dev)
# production=false

# Automatically update package-lock.json when needed
package-lock-only=false

# Engine strict - fail if Node version doesn't match
# engine-strict=true

# Progress indicator for better visibility
progress=true

# Limit network concurrency to avoid rate limiting
maxsockets=15

# Registry configuration (default to npm registry)
registry=https://registry.npmjs.org/

# Reject packages that fail audit
# audit-level=high will cause npm install to fail if high or critical vulnerabilities exist

# Optional: Enable signatures verification (when available)
# verify-signatures=true
