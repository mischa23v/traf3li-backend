{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --forceExit",
    "build": "npm run db:indexes || echo 'Index creation skipped (DB not available)'",
    "start": "node --max-old-space-size=512 --expose-gc src/server.js",
    "start:optimized": "node --max-old-space-size=512 --expose-gc --optimize-for-size --gc-interval=100 src/server.js",
    "start:high-memory": "node --max-old-space-size=1024 --expose-gc src/server.js",
    "dev": "nodemon src/server.js",
    "seed:accounts": "node src/scripts/seedAccounts.js",
    "db:indexes": "node src/scripts/createIndexes.js",
    "migrate:invoices": "node src/scripts/migrateInvoicesToGL.js",
    "migrate:bills": "node src/scripts/migrateBillsToGL.js",
    "migrate:expenses": "node src/scripts/migrateExpensesToGL.js",
    "migrate:all": "npm run migrate:invoices && npm run migrate:bills && npm run migrate:expenses",
    "backup:db": "node src/scripts/backup.js",
    "backup:db:weekly": "node src/scripts/backup.js --type=weekly",
    "backup:db:monthly": "node src/scripts/backup.js --type=monthly",
    "backup:redis": "node src/scripts/backupRedis.js",
    "backup:restore": "node src/scripts/restore.js",
    "backup:list": "node src/scripts/backup.js --list",
    "backup:schedule": "node src/scripts/backupScheduler.js",
    "backup:now": "node src/scripts/backupScheduler.js --now",
    "backup:health": "node src/scripts/backupScheduler.js --health",
    "docker:build": "docker-compose build",
    "docker:build:dev": "docker-compose build app-dev",
    "docker:build:prod": "docker-compose build app",
    "docker:up": "docker-compose --profile development up -d app-dev mongo redis mailhog",
    "docker:up:prod": "docker-compose --profile production up -d app mongo redis",
    "docker:down": "docker-compose down",
    "docker:down:clean": "docker-compose down -v",
    "docker:logs": "docker-compose logs -f app-dev",
    "docker:logs:prod": "docker-compose logs -f app",
    "docker:restart": "docker-compose restart app-dev",
    "docker:shell": "docker-compose exec app-dev sh",
    "docker:mongo": "docker-compose exec mongo mongosh traf3li",
    "docker:redis": "docker-compose exec redis redis-cli",
    "docker:mailhog": "echo 'MailHog UI: http://localhost:8025'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:audit": "npm audit --audit-level=high",
    "security:audit:fix": "npm audit fix",
    "security:audit:report": "npm audit --json > security-audit-report.json",
    "security:check": "npm audit --audit-level=high && echo '✅ Security audit passed'",
    "security:scan": "bash scripts/security-audit.sh",
    "setup:secrets": "node scripts/generate-secrets.js",
    "setup:env": "cp .env.example .env && echo '✅ Created .env file. Run npm run setup:secrets to generate secure values.'",
    "prepare": "husky install || true",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build:types": "tsc --declaration --emitDeclarationOnly"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@dinero.js/currencies": "^2.0.0-alpha.14",
    "@node-saml/passport-saml": "5.1.0",
    "@pdfme/common": "^5.5.7",
    "@pdfme/generator": "^5.5.7",
    "@pdfme/schemas": "^5.5.7",
    "@sentry/node": "^7.119.0",
    "@sentry/profiling-node": "^7.119.0",
    "@simplewebauthn/server": "13.2.2",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.0",
    "bull": "^4.16.5",
    "chrono-node": "^2.9.0",
    "clamscan": "2.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "decimal.js": "^10.4.3",
    "dinero.js": "^2.0.0-alpha.14",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.1",
    "express-validator": "^7.2.0",
    "file-type": "21.1.1",
    "geoip-lite": "1.4.10",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "ip-range-check": "^0.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.0",
    "ldapjs": "^3.0.7",
    "mongoose": "^7.0.1",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "mustache": "^4.2.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "ofx-js": "^0.2.0",
    "opossum": "^9.0.0",
    "puppeteer": "^23.0.0",
    "qrcode": "1.5.4",
    "rate-limit-mongo": "^2.3.2",
    "resend": "^6.5.2",
    "sanitize-html": "^2.17.0",
    "satelize": "^0.1.2",
    "socket.io": "^4.7.2",
    "speakeasy": "2.0.0",
    "string-similarity": "^4.0.4",
    "stripe": "^12.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ua-parser-js": "2.0.7",
    "uuid": "^9.0.0",
    "web-push": "^3.6.7",
    "winston": "^3.14.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.57.0",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "15.5.2",
    "mongodb-memory-server": "^10.0.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.0.0",
    "typescript": "^5.3.3"
  }
}
